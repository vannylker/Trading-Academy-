    <script>
        // Menu Mobile
        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        const mainMenu = document.getElementById('mainMenu');
        
        mobileMenuBtn.addEventListener('click', () => {
            mainMenu.classList.toggle('show');
            mobileMenuBtn.innerHTML = mainMenu.classList.contains('show') 
                ? '<i class="fas fa-times"></i>' 
                : '<i class="fas fa-bars"></i>';
        });
        
        // Scroll suave
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                
                const targetId = this.getAttribute('href');
                if(targetId === '#') return;
                
                const targetElement = document.querySelector(targetId);
                if(targetElement) {
                    // Fechar menu mobile se aberto
                    mainMenu.classList.remove('show');
                    mobileMenuBtn.innerHTML = '<i class="fas fa-bars"></i>';
                    
                    window.scrollTo({
                        top: targetElement.offsetTop - 80,
                        behavior: 'smooth'
                    });
                    
                    // Atualizar menu ativo
                    document.querySelectorAll('#mainMenu a').forEach(link => {
                        link.classList.remove('active');
                    });
                    this.classList.add('active');
                }
            });
        });
        
        // FAQ Accordion
        const faqQuestions = document.querySelectorAll('.faq-question');
        faqQuestions.forEach(question => {
            question.addEventListener('click', () => {
                const answer = question.nextElementSibling;
                const icon = question.querySelector('i');
                
                // Fechar todas as outras respostas
                document.querySelectorAll('.faq-answer').forEach(item => {
                    if(item !== answer) {
                        item.classList.remove('show');
                        item.previousElementSibling.querySelector('i').className = 'fas fa-chevron-down';
                    }
                });
                
                // Alternar resposta atual
                answer.classList.toggle('show');
                icon.className = answer.classList.contains('show') 
                    ? 'fas fa-chevron-up' 
                    : 'fas fa-chevron-down';
            });
        });
        
        // Simulador de Candlesticks
        const candleButtons = document.querySelectorAll('.tool-btn[data-candle]');
        const candleDemo = document.getElementById('candleDemo');
        const candleExplanation = document.getElementById('candleExplanation');
        
        const candleData = {
            bullish: {
                title: "Vela de Alta (Bullish)",
                color: "#2ed573",
                bodyHeight: 60,
                wickTop: 20,
                wickBottom: 20,
                explanation: "O pre√ßo de FECHAMENTO √© MAIOR que o de ABERTURA. Isso significa que os COMPRADORES controlaram o per√≠odo. Corpo grande indica convic√ß√£o forte dos compradores."
            },
            bearish: {
                title: "Vela de Baixa (Bearish)",
                color: "#ff4757",
                bodyHeight: 60,
                wickTop: 20,
                wickBottom: 20,
                explanation: "O pre√ßo de FECHAMENTO √© MENOR que o de ABERTURA. Isso significa que os VENDEDORES controlaram o per√≠odo. Corpo grande indica convic√ß√£o forte dos vendedores."
            },
            doji: {
                title: "Doji (Indecis√£o)",
                color: "#8892b0",
                bodyHeight: 10,
                wickTop: 40,
                wickBottom: 40,
                explanation: "ABERTURA e FECHAMENTO s√£o aproximadamente IGUAIS. Indica indecis√£o do mercado, empate entre compradores e vendedores. Pode sinalizar poss√≠vel revers√£o."
            },
            hammer: {
                title: "Martelo (Hammer)",
                color: "#2ed573",
                bodyHeight: 30,
                wickTop: 10,
                wickBottom: 50,
                explanation: "Pavio inferior LONGO, corpo pequeno na parte superior. Aparece em tend√™ncia de BAIXA. Sinal de revers√£o: vendedores empurraram o pre√ßo para baixo, mas compradores recuperaram a maior parte das perdas."
            }
        };
        
        candleButtons.forEach(button => {
            button.addEventListener('click', () => {
                // Remover active de todos os bot√µes
                candleButtons.forEach(btn => btn.classList.remove('active'));
                // Adicionar active ao bot√£o clicado
                button.classList.add('active');
                
                const candleType = button.dataset.candle;
                const data = candleData[candleType];
                
                // Atualizar visualiza√ß√£o
                candleDemo.innerHTML = `
                    <div style="display: flex; justify-content: center; align-items: center; height: 100%;">
                        <div style="width: 60px; height: 150px; position: relative;">
                            <!-- Pavio superior -->
                            <div style="position: absolute; left: 29px; top: 0; width: 2px; height: ${data.wickTop}px; background-color: ${data.color};"></div>
                            <!-- Corpo da vela -->
                            <div style="position: absolute; left: 20px; top: ${data.wickTop}px; width: 20px; height: ${data.bodyHeight}px; background-color: ${data.color}; border-radius: 3px;"></div>
                            <!-- Pavio inferior -->
                            <div style="position: absolute; left: 29px; top: ${data.wickTop + data.bodyHeight}px; width: 2px; height: ${data.wickBottom}px; background-color: ${data.color};"></div>
                        </div>
                    </div>
                `;
                
                // Atualizar explica√ß√£o
                candleExplanation.innerHTML = `
                    <h4 style="color: var(--accent-blue); margin-bottom: 0.5rem;">${data.title}</h4>
                    <p>${data.explanation}</p>
                    <p style="margin-top: 0.5rem; font-size: 0.9rem;">
                        <strong>An√°lise:</strong> ${candleType === 'bullish' ? 'Sinal de compra se em contexto de alta' : 
                                                   candleType === 'bearish' ? 'Sinal de venda se em contexto de baixa' : 
                                                   candleType === 'doji' ? 'Aguardar confirma√ß√£o da pr√≥xima vela' : 
                                                   'Potencial revers√£o de baixa para alta'}.
                    </p>
                `;
            });
        });
        
        // Inicializar com vela bullish
        document.getElementById('bullishBtn').click();
        
        // Calculadora de Risco
        const riskPercentSlider = document.getElementById('riskPercent');
        const riskValue = document.getElementById('riskValue');
        const calculateBtn = document.getElementById('calculateRisk');
        const riskResult = document.getElementById('riskResult');
        
        riskPercentSlider.addEventListener('input', () => {
            riskValue.textContent = `${riskPercentSlider.value}%`;
        });
        
        calculateBtn.addEventListener('click', () => {
            const capital = parseFloat(document.getElementById('capital').value);
            const riskPercent = parseFloat(riskPercentSlider.value) / 100;
            const stopDistance = parseFloat(document.getElementById('stopDistance').value);
            
            if (capital && stopDistance) {
                const riskAmount = capital * riskPercent;
                const positionSize = riskAmount / stopDistance;
                
                document.getElementById('riskAmount').textContent = `R$ ${riskAmount.toFixed(2)}`;
                document.getElementById('positionSize').textContent = `${positionSize.toFixed(2)} unidades`;
                document.getElementById('stopLoss').textContent = stopDistance;
                
                riskResult.style.display = 'block';
                
                // Feedback de risco
                if (riskPercent > 0.02) {
                    riskResult.style.borderLeft = '4px solid var(--danger)';
                    riskResult.querySelector('h4').innerHTML = '<i class="fas fa-exclamation-triangle"></i> Risco Muito Alto!';
                } else if (riskPercent > 0.015) {
                    riskResult.style.borderLeft = '4px solid var(--warning)';
                    riskResult.querySelector('h4').innerHTML = '<i class="fas fa-exclamation-circle"></i> Risco Moderado';
                } else {
                    riskResult.style.borderLeft = '4px solid var(--success)';
                    riskResult.querySelector('h4').innerHTML = '<i class="fas fa-check-circle"></i> Risco Adequado';
                }
            }
        });
        
        // Formul√°rio de Newsletter
        document.getElementById('newsletterForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const email = this.querySelector('input[type="email"]').value;
            
            // Simular envio
            alert(`Obrigado por se inscrever! As li√ß√µes ser√£o enviadas para: ${email}`);
            this.reset();
        });
        
        // Links de Recursos
        document.getElementById('glossaryLink').addEventListener('click', function(e) {
            e.preventDefault();
            alert('Gloss√°rio do Trader:\n\n‚Ä¢ Bullish: Tend√™ncia de alta\n‚Ä¢ Bearish: Tend√™ncia de baixa\n‚Ä¢ Long: Posi√ß√£o comprada\n‚Ä¢ Short: Posi√ß√£o vendida\n‚Ä¢ Stop Loss: Ordem para limitar perdas\n‚Ä¢ Take Profit: Ordem para realizar lucros\n‚Ä¢ Margin: Capital garantidor\n‚Ä¢ Leverage: Alavancagem\n‚Ä¢ Spread: Diferen√ßa entre compra e venda');
        });
        
        document.getElementById('diaryLink').addEventListener('click', function(e) {
            e.preventDefault();
            alert('üìñ Modelo de Di√°rio de Trading:\n\n1. Data e hora da opera√ß√£o\n2. Ativo negociado\n3. Dire√ß√£o (compra/venda)\n4. Pre√ßo de entrada\n5. Stop Loss definido\n6. Take Profit definido\n7. Raz√£o da entrada\n8. Resultado (lucro/perda)\n9. Li√ß√µes aprendidas\n\nMantenha este di√°rio religiosamente!');
        });
        
        // Atualizar menu ativo conforme scroll
        window.addEventListener('scroll', () => {
            const sections = document.querySelectorAll('section[id], article[id]');
            const navLinks = document.querySelectorAll('#mainMenu a');
            
            let current = '';
            sections.forEach(section => {
                const sectionTop = section.offsetTop;
                const sectionHeight = section.clientHeight;
                if (scrollY >= (sectionTop - 100)) {
                    current = section.getAttribute('id');
                }
            });
            
            navLinks.forEach(link => {
                link.classList.remove('active');
                if (link.getAttribute('href') === `#${current}`) {
                    link.classList.add('active');
                }
            });
            
            // Se no topo, ativar link "In√≠cio"
            if (scrollY < 100) {
                navLinks.forEach(link => link.classList.remove('active'));
                document.querySelector('#mainMenu a[href="#home"]').classList.add('active');
            }
        });
        
        // Analytics Simulado (para mostrar que pode ser integrado)
        console.log('Trading Academy - P√°gina carregada com sucesso');
        console.log('Pronto para indexa√ß√£o no Google');
    </script>
